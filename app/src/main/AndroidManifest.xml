<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bruhascended.trades">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Trades">
        <activity
            android:name=".trade.TradeActivity"
            android:theme="@style/Theme.Trades.NoActionBar"
            android:label="@string/trade">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bruhascended.trades.trades.MainActivity" />
        </activity>
        <activity
            android:name=".newtrade.NewTradeActivity"
            android:theme="@style/Theme.Trades.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bruhascended.trades.trades.MainActivity" />
        </activity>
        <activity
            android:name=".trades.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Trades.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>